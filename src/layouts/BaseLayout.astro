---
interface Props {
    title?: string;
}

const { title = "UI Prototype Lab" } = Astro.props;
---

<!doctype html>
<html lang="es" class="h-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>

        <!-- Tailwind base styles -->
        <link rel="stylesheet" href="/src/styles/index.css" />
    </head>

    <body class="h-full bg-gray-50 text-gray-900 antialiased">
        <!-- Top Bar -->
        <header class="sticky top-0 z-50 border-b bg-white/80 backdrop-blur">
            <div
                class="mx-auto flex max-w-7xl items-center justify-between px-6 py-3"
            >
                <div class="flex items-center gap-3">
                    <a
                        href="/"
                        class="text-sm font-medium text-gray-500 hover:text-gray-900 transition"
                    >
                        ← Galería
                    </a>

                    <div class="h-4 w-px bg-gray-300"></div>

                    <span class="text-sm font-semibold tracking-tight">
                        {title}
                    </span>
                </div>

                <div class="flex items-center gap-3">
                    <span class="text-xs text-gray-400">
                        UI Prototype Lab
                    </span>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="min-h-[calc(100vh-60px)]">
            <slot />
        </main>
    </body>
</html>
